<!-- activity_document_editor.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- LinearLayout to contain EditText and Buttons -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp">

        <!-- EditText for document content -->
        <EditText
            android:id="@+id/etDocumentContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:hint="Enter your text here"
            android:textSize="16sp"
            android:maxLines="10"
            android:minLines="5"
            />



        <!-- Save Document Button -->
        <Button
            android:id="@+id/btnSaveDocument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Document"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />

        <!-- Save to File Button -->
        <Button
            android:id="@+id/btnSaveToFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save to File"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />

    </LinearLayout>

</RelativeLayout>